<p id="notice"><%= notice %></p>
<h1>Emails</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <div  class="object">
          <%= link_to email.object, email_path(email), remote: true  %></td>
      </div>
      <div id="body">
      </div>
    </tr>
  <% end %>
</tbody>
</table>
<br>
<%= link_to 'New Email', new_email_path %>
